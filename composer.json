{
    "name": "schivei/laravel-tag-helper",
    "description": "Add powerful HTML tag helpers to your Laravel application",
    "keywords": [
        "beyondcode",
        "schivei",
        "laravel-tag-helper"
    ],
    "homepage": "https://github.com/schivei/laravel-tag-helper",
    "license": "MIT",
    "authors": [
        {
            "name": "Elton Schivei Costa",
            "email": "costa@elton.schivei.nom.br",
            "homepage": "https://elton.schivei.nom.br",
            "role": "Developer"
        },
        {
            "name": "Marcel Pociot",
            "email": "marcel@beyondco.de",
            "homepage": "https://beyondcode.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8",
        "fluentdom/fluentdom": "^8.0",
        "ext-libxml": "*",
        "ext-dom": "*"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.1",
        "orchestra/testbench": "^9",
        "phpunit/php-code-coverage": "^11.0",
        "phpunit/phpunit": "^11",
        "spatie/phpunit-snapshot-assertions": "^5"
    },
    "autoload": {
        "psr-4": {
            "Schivei\\TagHelper\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Schivei\\TagHelper\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "make",
        "test-coverage": "make coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Schivei\\TagHelper\\TagHelperServiceProvider"
            ],
            "aliases": {
                "TagHelper": "Schivei\\TagHelper\\TagHelperFacade"
            }
        }
    }
}
